{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@errors/*": ["src/errors/*"],
      "@middleware/*": ["src/middleware/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": ["src/**/*"]
}
